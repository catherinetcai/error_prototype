	%body
		%nav.navbar.navbar-inverse
			.col-xs-12.text-center{:id => "logo_container"}
				%a{:href => "/"}
					%img{:src => "images/home_logo.png"}
		.clearfix
		%container-fluid.main
			%invitation.text-center
				.header-text
					%h4.title.text-center
						b Spot Error Test
				%p.text-center
				#errorContainer
					%ul
				%form#test_form
					.form-group.name
						-#%label.name{:for => "testname"} Username
						%input#testname{:type => "text", :class => "form-control", :placeholder => "Username", :name => "testname"}
							%span.delete-button-container.hidden
								%img.delete-button{:src => "images/clear.png"}
					.form-group.password
						-#%label.password{:for => "test_password"} Password
						%input{:type => "password", :class => "form-control", :id => "test_password", :name => "test_password", :placeholder => "Password"}
							%span.delete-button-container.hidden
								%img.delete-button{:src => "images/clear.png"}
					.form-group.confirm_password
