						%input{:type => "password", :class => "form-control", :id => "test_confirm_password", :name => "test_confirm_password", :placeholder => "Confirm password"}
							%span.delete-button-container.hidden
								%img.delete-button{:src => "images/clear.png"}
					.form-group.email
